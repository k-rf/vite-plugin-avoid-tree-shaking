{
  "name": "template-typescript",
  "remoteUser": "template-typescript",
  "dockerComposeFile": "./compose.dev.yaml",
  "service": "app",
  "postCreateCommand": "bun install",
  "workspaceFolder": "/template-typescript",
  "overrideCommand": true,
  "shutdownAction": "none",
  "customizations": {
    "vscode": {
      "extensions": [
        "albymor.increment-selection",
        "bodil.file-browser",
        "christian-kohler.path-intellisense",
        "DavidAnson.vscode-markdownlint",
        "dbaeumer.vscode-eslint",
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "foxundermoon.shell-format",
        "GitHub.copilot-chat",
        "GitHub.copilot",
        "github.vscode-github-actions",
        "GitHub.vscode-pull-request-github",
        "Gruntfuggly.todo-tree",
        "hbenl.vscode-test-explorer",
        "hediet.vscode-drawio",
        "ipatalas.vscode-postfix-ts",
        "irongeek.vscode-env",
        "kahole.magit",
        "kavod-io.vscode-jest-test-adapter",
        "mhutchie.git-graph",
        "mikestead.dotenv",
        "ms-azuretools.vscode-docker",
        "MS-vsliveshare.vsliveshare",
        "mutantdino.resourcemonitor",
        "Perkovec.emoji",
        "redhat.vscode-yaml",
        "shd101wyy.markdown-preview-enhanced",
        "streetsidesoftware.code-spell-checker",
        "stringham.copy-with-imports",
        "WallabyJs.console-ninja",
        "wmaurer.change-case",
        "yoavbls.pretty-ts-errors",
        "Yukai.map-replace-js",
        "yzhang.markdown-all-in-one"
      ],
      "settings": {
        "editor.codeActionsOnSave": { "source.fixAll": "explicit" },
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "file",
        "eslint.rules.customizations": [{ "rule": "@cspell/spellchecker", "severity": "off" }],
        "eslint.useFlatConfig": true,
        "eslint.workingDirectories": [{ "mode": "auto" }],
        "files.insertFinalNewline": true,
        "files.trimFinalNewlines": true,
        "files.trimTrailingWhitespace": true,
        "[markdown]": {
          "editor.unicodeHighlight.ambiguousCharacters": false,
          "editor.unicodeHighlight.invisibleCharacters": false,
          "diffEditor.ignoreTrimWhitespace": false,
          "editor.wordWrap": "on",
          "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
          },
          "files.trimTrailingWhitespace": false,
          "cSpell.fixSpellingWithRenameProvider": true,
          "cSpell.advanced.feature.useReferenceProviderWithRename": true,
          "cSpell.advanced.feature.useReferenceProviderRemove": "/^#+\\s/"
        }
      }
    }
  }
}
